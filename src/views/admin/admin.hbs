{{#if usuarios}}
  <div class="container mt-4">
    <div class="row g-3">
      {{#each usuarios}}
        <div class="col-md-4">
          <div class="card shadow-sm border-0 rounded-4">
            <div class="card-body">
              <h5 class="card-title text-primary mb-2">{{nome}}</h5>
              <p class="card-text mb-1"><strong>Email:</strong> {{email}}</p>
              <p class="card-text mb-1"><strong>Senha:</strong> {{senha}}</p>
              <p class="card-text">
                <strong>Tipo:</strong>
                {{#if eAdmin}}<span class="badge bg-success">Administrador</span>{{else}}<span class="badge bg-secondary">Usuário</span>{{/if}}
              </p>
              <div class="d-flex justify-content-end mt-3 gap-2">
                <button class="btn btn-sm btn-outline-primary">
                  <i class="bi bi-pencil-square"></i> Editar
                <form action="/admin/deletar/{{_id}}" method="POST" style="display:inline;">
  <button type="submit" class="btn btn-sm btn-outline-danger">
    <i class="bi bi-trash"></i> Excluir
  </button>
</form>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
{{else}}
  <p class="text-center text-muted mt-5">Nenhum usuário cadastrado.</p>
{{/if}}

